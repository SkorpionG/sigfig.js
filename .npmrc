# NPM Configuration

# Use npm registry (default)
registry=https://registry.npmjs.org/

# Save exact versions in package.json (no ^ or ~)
save-exact=false

# Automatically save dependencies when installing
save=true

# Engine strict - fail if Node version doesn't match
engine-strict=false

# Package lock
package-lock=true

# Audit level (low, moderate, high, critical, none)
# audit-level=moderate

# Fund messages
fund=false

# Update notifier
# update-notifier=false
